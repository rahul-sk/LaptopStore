@model IEnumerable<LaptopStore.Models.Laptop>
@{
    ViewData["Title"] = "CurrentOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int cnt = int.Parse(ViewBag.cnt.ToString());
    DateTime nw = DateTime.Now;
    Random ran = new Random();
}
<style>
    .card {
        height: 60vh;
        margin: 25px;
        padding: 25px;
    }

    .center img {
        text-decoration: none;
        color: inherit;
        border: none;
        outline: none;
        height: 162px;
        width: 250px;
        margin: 20px 0px;
    }

    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
    }

    img {
        height: 150px;
        width: 150px;
        border-radius: 50%;
    }

    .order-data {
        vertical-align: middle;
        align-items: center;
        align-self: center;
    }

    .card-table {
        margin-top: 25px;
        position: relative;
        display: flex;
        flex-direction: column;
        background-clip: border-box;
        border: 1px solid black;
        border-radius: .25rem;
    }
</style>

@if (cnt == 0) { 
<div class="container">
    <div class="card">
        <h5 class="card-title">My Orders</h5>

    </div>
    <div class="center">
        <img src="~/images/undraw_shopping_app_flsj.svg" alt="sompic">
        <h4>No active orders</h4>
        <a asp-action="Index">Shop now</a>
    </div>
</div>
}

else
{
    foreach (var item in Model)
    {


<div class="card" style="height: 16rem;">
    <h5 class="card-header">@item.ItemTitle</h5>
    <div class="card-body">
        <h5 class="card-title"><span class="badge bg-primary">@item.Price</span></h5>
        <p class="card-text"><span style="color:green;">Arriving by @nw.AddDays(ran.Next(5)).DayOfWeek</span></p>
        <a class="btn btn-primary" asp-controller="Laptop" asp-action="Details" asp-route-id="@item.Id">Details</a>
    </div>
</div>
    }

}

